\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathrm{cov\left(\mathit{y_{h},z_{l}}\right)} & \mathrm{=cov\left(\mathit{ay_{l}+y_{err},z_{l}}\right)}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
= & E\left[\left(\left(ay_{l}+y_{err}\right)-E\left[ay_{l}+y_{err}\right]\right)\left(z_{l}-E\left[z_{l}\right]\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
= & E\left[\left(\left(ay_{l}-E\left[ay_{l}\right]\right)+\left(y_{err}-E\left[y_{err}\right]\right)\right)\left(z_{l}-E\left[z_{l}\right]\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
= & E\left[a\left(y_{l}-E\left[y_{l}\right]\right)\left(z_{l}-E\left[z_{l}\right]\right)\right]+E\left[\left(y_{err}-E\left[y_{err}\right]\right)\left(z_{l}-E\left[z_{l}\right]\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
= & acov\left(y_{l},z_{l}\right)+cov\left(y_{err},z_{l}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Es gilt wieder:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
cov\left(y_{err},z_{l}\right) & =0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Daraus ergibt sich
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathrm{cov\left(\mathit{y_{h},z_{l}}\right)}= & cov\left(y_{l},z_{l}\right)
\end{align*}

\end_inset


\end_layout

