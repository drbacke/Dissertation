\begin_inset Formula 
\[
\overrightarrow{y}^{T}\mathbf{Cov}^{-1}G=\vec{\tilde{\beta}}^{T}G^{T}\mathbf{Cov}^{-1}G
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\left(\overrightarrow{y}^{T}\mathbf{Cov}^{-1}G\right)\left(G^{T}\mathbf{Cov}^{-1}G\right)^{-1}=\vec{\tilde{\beta}}^{T}
\]

