\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\left(\frac{1}{\left(2\pi\right)^{\frac{n}{2}}det\left(R\right)^{\frac{1}{2}}}\frac{\partial}{\partial\sigma_{j}}\left(\frac{1}{\prod_{i=1}^{m_{f}}\sigma_{i}^{n_{i}}}e^{-\frac{1}{2}\left(\overrightarrow{y}-\vec{\beta}\right)^{T}\mathbf{S}^{-1}\mathbf{R}^{-1}\mathbf{S}^{-1}\left(\overrightarrow{y}-\vec{\beta}\right)}\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\frac{\partial}{\partial\sigma_{j}}\left(\prod_{i=1}^{m_{f}}\sigma_{i}^{-n_{i}}e^{-\frac{1}{2}\left(\overrightarrow{y}-\vec{\beta}\right)^{T}\mathbf{S}^{-1}\mathbf{R}^{-1}\mathbf{S}^{-1}\left(\overrightarrow{y}-\vec{\beta}\right)}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\prod_{i=1,i\neq j}^{m_{f}}\sigma_{i}^{-n_{i}}\frac{\partial}{\partial\sigma_{j}}\left(\sigma_{j}^{-n_{j}}e^{-\frac{1}{2}\left(\overrightarrow{y}-\vec{\beta}\right)^{T}\mathbf{S}^{-1}\mathbf{R}^{-1}\mathbf{S}^{-1}\left(\overrightarrow{y}-\vec{\beta}\right)}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
