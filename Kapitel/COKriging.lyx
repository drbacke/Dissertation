\begin_layout Standard
Das Maximum der mehrdimensionalen Normalverteilung nach dem Maximum Likelihood
 Ansatz bezüglich des Vektors 
\begin_inset Formula $\vec{\beta}\in\mathbb{R^{\mathrm{n}}}$
\end_inset

 sieht wie folgt aus:
\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
MLE\left(\vec{\beta}\right)=max\left(\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}e^{-\frac{1}{2}\left(\overrightarrow{y}-\vec{\beta}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-\vec{\beta}\right)}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Führt man eine Matrix 
\begin_inset Formula $G\in\mathbb{R^{\mathrm{n\times m_{f}}}}$
\end_inset

 ein in der Form:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
G=\left[\begin{array}{ccc}
1 &  & 0\\
\vdots & \cdots & \vdots\\
1_{n_{1}} &  & 0_{n_{1}}\\
0 & 1 & 0\\
\vdots & \ddots & \vdots\\
0_{n_{2}} & 1 & 0_{n_{2}}\\
0 &  & 1\\
\vdots & \cdots & \vdots\\
0_{n_{mf}} &  & 1_{n_{mf}}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Und einen Vektor 
\begin_inset Formula $\vec{\tilde{\beta}}\in\mathbb{R^{\mathrm{m_{f}\times1}}}$
\end_inset

, so kann man den 
\begin_inset Formula $\vec{\beta}\in\mathbb{R^{\mathrm{n}}}$
\end_inset

 Vektor durch folgende Formulierung ersetzen:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\vec{\beta} & =G\vec{\tilde{\beta}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Daraus folgt:
\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
MLE\left(\vec{\beta}\right)=max\left(\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}\right)
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\frac{\partial}{\partial\vec{\beta}}\left(\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}\right)=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}\frac{\partial}{\partial\vec{\beta}}\left(e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}\right)=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}\frac{\partial}{\partial\vec{\tilde{\beta}}}\left(-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)\right)e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Standard
Die Ableitung der quadratischen Form 
\series medium
mit symmetrischer Matrix 
\begin_inset Formula $A$
\end_inset

 lautet 
\begin_inset Formula $\frac{\partial}{\partial x}g\left(x\right)^{T}\mathbf{A}g\left(x\right)=g\left(x\right)^{T}\mathbf{A}\frac{\partial g\left(x\right)}{\partial x}+\frac{\partial g\left(x\right)}{\partial x}^{T}\mathbf{A}g\left(x\right)=2g\left(x\right)^{T}\mathbf{A}\frac{\partial g\left(x\right)}{\partial x}$
\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}\left(-\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\frac{\partial}{\partial\vec{\tilde{\beta}}}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)\right)e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}\left(-\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(-G\right)\right)e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\frac{1}{\left(2\pi\right)^{\frac{n}{2}}|\mathbf{Cov}|^{\frac{1}{2}}}\left(\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}G\right)e^{-\frac{1}{2}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)}=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Standard
Da nur 
\begin_inset Formula $\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}G$
\end_inset

 zu 0 werden kann:
\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\left(\overrightarrow{y}-G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}G=\vec{0}
\]

\end_inset


\end_layout

\begin_layout Paragraph
\begin_inset Formula 
\[
\overrightarrow{y}^{T}\mathbf{Cov}^{-1}G-\left(G\vec{\tilde{\beta}}\right)^{T}\mathbf{Cov}^{-1}G=\vec{0}
\]

\end_inset


\end_layout

