\begin{align*}
\beta & =\sum_{i=1}^{m_{f}}\beta_{i}\sum_{j=1}^{n_{i}}w_{i,j}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
1 & =\sum_{i=1}^{m_{f}}\sum_{j=1}^{n_{i}}\frac{\beta_{i}}{\beta}w_{i,j}
\end{align*}

\end_inset


\end_layout

